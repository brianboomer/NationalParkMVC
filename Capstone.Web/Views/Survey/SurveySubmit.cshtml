@model Survey
@{
    ViewData["Title"] = "SurveySubmit";
}

<h1 class="title">Survey Submission</h1>

<form asp-controller="Survey" asp-action="SurveyResults" method="post">
    
    
       <img class="img-responsive center" src="~/images/parks/cvnp.jpg">
    <BR />
    
    <p>We want to hear from you!  Fill out our quick survey below and help us make your favorite park even better!</p>

    <p>
        <label asp-for="ParkCode">Which park is your favorite?</label>
        <select asp-for="ParkCode" asp-items="@ViewBag.ParkCodes"></select>
    </p>
    
    <p>
        <label asp-for="EmailAddress"></label>
        <input asp-for="EmailAddress" />
    </p>
    
    <p>
        <label asp-for="State"></label>
        <select asp-for="State" asp-items="@Survey.StateList"></select>
    </p>
    
    <p>
        <label asp-for="ActivityLevel"></label>
        <select asp-for="ActivityLevel" asp-items="@Survey.List"></select>
    </p>
    
    <p>
        <input type="submit" value="Submit"/>
    </p>
        
    
    

</form>

